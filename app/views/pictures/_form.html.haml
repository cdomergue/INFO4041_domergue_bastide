= form_for(@picture) do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2
        = pluralize(@picture.errors.count, "error")
        prohibited this picture from being saved:
      %ul
        - @picture.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .field
    = f.label :category
    %br/
    = f.select(:category_id, options_for_select(Category.all.map{|category| [category.name, category.id] }))
  .actions
    = f.submit